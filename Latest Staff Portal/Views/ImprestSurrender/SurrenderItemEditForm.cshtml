@model Latest_Staff_Portal.ViewModel.ImpSurrenderLineDetails
<div class="bg-soft-dark" style="color:black">
    <div class="row">
        <div class="col-md-6">
            Actual Spent
            @Html.TextBoxFor(m => m.ActaulAmount, new { @class = "form-control", onkeypress = "return functionDecimal(event,this.value)", id = "txtAmount" })
        </div>
        <div class="col-md-6">
            Cash Receipt No
            @Html.DropDownListFor(model => model.Receipt, Model.ListOfPostedReceipts, "--select Receipt No--", new { @class = "form-control", id = "ddlReceiptNo" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            Line Claim Amount
            @Html.TextBoxFor(m => m.ClaimAmount, new { @class = "form-control", onkeypress = "return functionDecimal(event,this.value)", id = "txtClaimAmount" })
        </div>
    </div>
