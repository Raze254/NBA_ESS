@model IEnumerable<Latest_Staff_Portal.ViewModel.ImprestSurrenderLines>

<div class="table-responsive">
    <table id="datatable-buttons" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
        <thead style="background-color:black;color:white">
            <tr>
                <th>Document No</th>
                <th>Line No</th>
                <th>Transaction Type</th>
                <th>Expense Type</th>
                <th>Account Type</th>
                <th>Account No</th>
                <th>Description</th>
                <th>Quantity</th>
                <th>Unit of Measure</th>
                <th>Unit Price</th>
                <th>Amount</th>
                <th>Requested Amount</th>
                <th>Actual Spent</th>
                <th>Remaining Amount</th>
                <th>Surrender</th>
                <th></th>
            </tr>

        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Document_No)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Line_No)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TransactionType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpenseType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UnitofMeasure)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UnitPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequestedAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ActualSpent)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RemainingAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surrender)
                    </td>
                    <td>
                        <button class="btn btn-success  btn-sm" data-toggle="tooltip" data-placement="top" title="Edit"
                                onclick="EditItem('@item.Document_No', '@item.Line_No');">
                            Edit Line
                        </button>

                        <button class="btn btn-danger  btn-sm ml-3" data-toggle="tooltip" data-placement="top" title="Delete" onclick="RemoveItem('@item.Document_No');">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

