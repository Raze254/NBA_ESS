@model Latest_Staff_Portal.ViewModel.ImprestSurrender
<style>
	.d-flex {
		display: flex;
	}

	.align-items-center {
		align-items: center;
	}

	.ml-2 {
		margin-left: 0.5rem;
	}
</style>
<div class="card-body">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.Label("Imprest Issue Doc No", new { @class = "control-label col-md-12", @for = "Workplan" })
                @Html.DropDownListFor(model => model.ImprestIssueDocNo, Model.ListOfImprestIssueDoc, "--Select Imprest--", new { @class = "form-control select2", id = "imprestIssueDoc" })
                @Html.ValidationMessageFor(model => model.ImprestIssueDocNo, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
</div>
<hr/>
<div align="center">
    <input type="button" class="btn btn-primary action-buttons" value="Submit Request" onclick="SurrenderImprestDoc();"/>
</div>
<script>
    $(document).ready(function () {
        $('#myModal').on('shown.bs.modal', function () {
            setTimeout(function () {
                $('.select2').select2({
                    dropdownParent: $('#myModal')
                });
            }, 200);
        });
    });
</script>