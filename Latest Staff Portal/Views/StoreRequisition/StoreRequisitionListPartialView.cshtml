@model IEnumerable<Latest_Staff_Portal.ViewModel.StoreRequisitions>

<div class="table-responsive">
    <table id="datatable-buttons" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
        <thead>
            <tr>
                <th>Action</th>
                <th>No</th>
                <th>Request By Name</th>
                @* <th>HOD</th>*@
                <th>Order Date</th>
                <th>Requisition Type</th>

                <th>Department Name</th>
                <th>Project Name</th>
                <th>Status</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td><input type="button" onclick="ViewDoc('@item.No');" class="btn btn-primary btn sm action-buttons3" value="Select" /></td>

                    <td>
                        @Html.DisplayFor(modelItem => item.No)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Request_By_Name)
                    </td>
                    @* <td>
                            @Html.DisplayFor(modelItem => item.HOD)
                        </td>*@

                    <td>
                        @Html.DisplayFor(modelItem => item.Order_Date)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Requisition_Type)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Department_Name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Project_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>


                </tr>
            }
        </tbody>
    </table>
</div>


<script>
    $("#datatable-buttons").DataTable({
        lengthChange: true,
        lengthMenu: [5, 10, 25, 50, 100] // Same options for the second table
    });
</script>