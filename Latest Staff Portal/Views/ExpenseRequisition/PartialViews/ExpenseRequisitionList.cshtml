@model List<Latest_Staff_Portal.ViewModel.ExpenseRequisition>

<div class="table-responsive">
    <table id="datatable-buttons" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
        <thead style="background-color:black;color:white">
        <tr>
            <th>Select</th>
            <th>No</th>
            <th>Description</th>
            <th>Budget Code</th>
            <th>Date</th>
            <th>Work-plan</th>
            <th>Approval Status</th>
        </tr>
        </thead>
        <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="button" onclick="ViewDoc('@item.No');" class="btn btn-primary action-buttons3" value="Select"/>
                    </td>
                    <td>@item.No</td>
                    <td>@item.Description</td>
                    <td>@item.BudgetCode</td>
                    <td>@item.Date</td>
                    <td>@item.Workplan</td>
                    <td>@item.ApprovalStatus</td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>
<script>
    $("#datatable-buttons").DataTable({
        lengthChange: true,
        lengthMenu: [5, 10, 25, 50, 100] // Same options for the second table
    });
</script>