@model IEnumerable<Latest_Staff_Portal.ViewModel.TrainingEvaluationLine>


<div class="">
    <table class="datatable table table-stripped" id="datatable-lines2">
        <thead>
            <tr>
              @*  <th style="text-align: center">Entry No.</th>*@
                <th>Category Description</th>
                <th>Comments</th>
                @if (ViewBag.Status == "Open")
                {
                    <th class="action">Action</th>
                }
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        @* <td style="text-align: center">@item.Entry_No</td> *@
                        <td>@item.Category_Description</td>
                        <td>@Html.Raw((item.Comments ?? "").Replace("\n", "<br />").Replace("\r", ""))</td>
                        @if (ViewBag.Status == "Open")
                        {
                            <td style="" class="tdAction">
                                <button class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="top" title="Delete" onclick="DeleteAssessmentLine('@item.Entry_No');">Delete</button>
                            </td>
                        }
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@{
    if (ViewBag.Status == "Open")
    {
        <div class="mt-3" style="text-align:right">
            <button class="action-buttons" color:whitesmoke; border-radius:10px" onclick="AddTrainingAssessmentLine();">
                <i class="fa fa-plus-circle" aria-hidden="true"></i> Add Line
            </button>
        </div>
    }
}

<script>
    $("#datatable-lines2").DataTable({
        lengthChange: true,
        lengthMenu: [5, 10, 25, 50, 100],
        "bDestroy": true
    });
</script>
