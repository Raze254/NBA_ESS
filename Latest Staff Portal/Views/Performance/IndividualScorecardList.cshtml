    var ViewAppraisalDoc = function (DocNo) {
        $("#labelF").text("Leave Details Document");
        ShowProgress();
        window.location = "/Appraisal/IndividualScoreCard?AppDoc=" + DocNo;
    }
    var SendLeaveDocForApproval = function () {
        $("#labelF").text("Leave Details Document");
        var row = $('#datatable-buttons tr.selectedTableRow');
        var DocNo = row.find("td").eq(1).html().trim();
        ShowProgress();
        $.ajax({
            async: true,
            type: "POST",
            datatype: "json",
            data: JSON.stringify({ DocNo: DocNo }),
            contentType: "application/json; charset = utf-8",
            processData: false,
            url: '/Leave/SendLeaveAppForApproval',
            success: function (data) {
                LoadLeaveReqList();
                if (data.success == true) {
                    Swal.fire('Success', data.message, 'success');
                }
                else {
                    Swal.fire('Error', data.message, 'error');
                }
            },
            error: function (err) {
                Swal.fire('Warning', err, 'warning');
            }
        });
        DiableButtons();
        HideProgress();
    }
    var CancelLeaveDocForApproval = function () {
        $("#labelF").text("Leave Details Document");
        var row = $('#datatable-buttons tr.selectedTableRow');
        var DocNo = row.find("td").eq(1).html().trim();
        ShowProgress();
        $.ajax({
            async: true,
            type: "POST",
            datatype: "json",
            data: JSON.stringify({ DocNo: DocNo }),
            contentType: "application/json; charset = utf-8",
            processData: false,
            url: '/Leave/CancelLeaveAppForApproval',
            success: function (data) {
                LoadLeaveReqList();
                if (data.success == true) {
                    DiableButtons();
                    HideProgress();
                    Swal.fire('Success', data.message, 'success');
                }
                else {
                    DiableButtons();
                    HideProgress();
                    Swal.fire('Error', data.message, 'error');
                }
            },
            error: function (err) {
                HideProgress();
                Swal.fire('Warning', err, 'warning');
            }
        });

    }
