<script type="text/javascript">
    $(document).ready(function () {
        LoadAppraisalReqList();
    });
    var LoadAppraisalReqList = function () {
        ShowProgress();
        $.ajax({
            async: true,
            type: "GET",
            dataType: 'HTML',
            contentType: false,
            processData: false,
            url: "/Performance/IndividualScorecardListPartialView",
            success: function (data) {
                HideProgress();
                $("#divAppraisalList").html(data);
            },
            error: function () {
                HideProgress();
                Swal.fire("There is some problem to process your request. Please try after some time");
            }
        });
    }
    var NewAppraisalDoc = function () {
        $("#labelF").text("Performance Appraisal System");
        ShowProgress();
        $.ajax({
            async: true,
            type: "POST",
            datatype: "json",
            contentType: "application/json; charset = utf-8",
            processData: false,
            url: '/Performance/NewIndividualScorecard',
            success: function (data) {
                $("#modalBody").html(data);
                HideProgress();
                $("#myModal").modal("show");
            },
            error: function (err) {
                HideProgress();
                Swal.fire('Warning', err, 'warning');
            }
        });
    }
    var SubmitPMMUInitiative = function () {
        var Department = $('#ddlDim2').val();
        var Strategy_Plan_ID = $('#ddlPMMU').val();
        var FromDate = $('#dtFrom').val();
        var ToDate = $('#dtTo').val();
        alert("Clicked");

        if (!Department) {
            Swal.fire('Warning', 'Please select a Directorate/Department.', 'warning');
            return;
        }

        if (!Strategy_Plan_ID) {
            Swal.fire('Warning', 'Please select a PMMU.', 'warning');
            return;
        }

        if (!FromDate) {
            Swal.fire('Warning', 'Please select a From Date.', 'warning');
            return;
        }

        if (!ToDate) {
            Swal.fire('Warning', 'Please select a To Date.', 'warning');
            return;
        }

        $.ajax({
            type: "POST",
            url: "/Performance/SubmitIndividualScorecard",
            data: { Department: Department, Strategy_Plan_ID: Strategy_Plan_ID, FromDate: FromDate, ToDate: ToDate },
            success: function (response) {
                if (response.success) {
                    Swal.fire('Success', response.message, 'success');
                } else {
                    Swal.fire('Error', response.message, 'error');
                }
            },
            error: function (xhr, status, error) {
                Swal.fire('Error', 'Failed to submit data. Please try again.', 'error');
            }
        });
    }

