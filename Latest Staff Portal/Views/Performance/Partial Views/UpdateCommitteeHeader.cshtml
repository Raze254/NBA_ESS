                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.Label("Appointment Effective Date", htmlAttributes: new { @class = "control-label col-md-2" })
                @* <input type="text" class="form-control" placeholder="dd/mm/yyyy" id="Appointment_Effective_Date" onkeydown="return false;" autocomplete="off" />*@
                @Html.TextBoxFor(model => model.Appointment_Effective_Date, new { @class = "form-control", @type = "date", @Id = "Appointment_Effective_Date10" })
