@model Latest_Staff_Portal.ViewModel.CommitteeAppointmentVouchers



<div class="card-body">
    <div class="row">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-md-6">
            <div class="form-group">
                @Html.Label("Document Type", htmlAttributes: new { @class = "control-label col-md-2" })

                <select id="Document_Type" class="form-control">
                    <option value="" selected hidden>--Select Document Type--</option>
                    <option value="0">Appointment</option>
                    <option value="1">Termination</option>
                    <option value="2">PMMU</option>
                    <option value="3">PAS</option>
                </select>
                @Html.ValidationMessageFor(model => model.Document_No, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.Label("Document_Date", htmlAttributes: new { @class = "control-label col-md-2" })
                @*  @Html.TextBoxFor(model => model.Document_Date, new { @class = "form-control", @type = "date", @Id = "Document_Date" })*@
                <input type="text" class="form-control" placeholder="dd/mm/yyyy" id="Document_Date" onkeydown="return false;" autocomplete="off" />
                @Html.ValidationMessageFor(model => model.Document_Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                @Html.Label("Description", htmlAttributes: new { @class = "control-label col-md-2" })

                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.Label("Appointment Effective Date", htmlAttributes: new { @class = "control-label col-md-2" })
                <input type="text" class="form-control" placeholder="dd/mm/yyyy" id="Appointment_Effective_Date" onkeydown="return false;" autocomplete="off" />
                @*  @Html.TextBoxFor(model => model.Appointment_Effective_Date, new { @class = "form-control", @type = "date", @Id = "Appointment_Effective_Date" })*@
                @Html.ValidationMessageFor(model => model.Appointment_Effective_Date, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.Label("Tenure End Date", htmlAttributes: new { @class = "control-label col-md-2" })
                <input type="text" class="form-control" placeholder="dd/mm/yyyy" id="Tenure_End_Date" onkeydown="return false;" autocomplete="off" />
                @* @Html.TextBoxFor(model => model.Tenure_End_Date, new { @class = "form-control", @type = "date", @Id = "Tenure_End_Date" })*@
                @Html.ValidationMessageFor(model => model.Tenure_End_Date, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="col-md-6">
            <div class="form-group">
                @Html.Label("Venue", htmlAttributes: new { @class = "control-label col-md-2" })

                @Html.EditorFor(model => model.Venue, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Venue, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-12">
            <div>
                @Html.Label("Additional Brief", htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="">
                @Html.TextAreaFor(model => model.Additional_Brief, new { htmlAttributes = new { @class = "form-control width-full" } })
                @Html.ValidationMessageFor(model => model.Additional_Brief, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>



    <div class="form-group row text-center">
        <input type="button" class="btn btn-primary waves-effect waves-light" value="Submit Request" onclick="SubmitCommitteeAppointmentVouchers();" />
    </div>
</div>


<script>
    $(document).ready(function () {
        // Initialize datepickers
        $('#Document_Date, #Appointment_Effective_Date, #Tenure_End_Date').datepicker({
            changeMonth: true,
            changeYear: true,
            autoclose: true,
            yearRange: '-1:+2',
            showOtherMonths: true,
            dateFormat: 'dd/mm/yy'
        });

 


        // Adjust the position of the datepicker for both fields
        $('#Document_Date').focus(function () {
            $("#ui-datepicker-div").position({
                my: "left top",
                at: "left bottom",
                of: $(this)
            });
        });

        // Set default value to today's date
        var today = new Date();
        var day = ("0" + today.getDate()).slice(-2);
        var month = ("0" + (today.getMonth() + 1)).slice(-2);
        var todayFormatted = day + "/" + month + "/" + today.getFullYear();
        $('#Document_Date').val(todayFormatted);
    });
</script>
