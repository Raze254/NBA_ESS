@model IEnumerable<Latest_Staff_Portal.ViewModel.IndividualScoreCard>
<div class="pre-scrollable">
    <table id="datatable-buttons" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
        <thead style="background-color:black;color:white">
            <tr>
                <th></th>
                <th>Doc No</th>
                <th>Stafff Name</th>
                <th>Strategy Plan ID</th>
                <th>Appraisal Period</th>
                <th>End Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model != null)
                {
                    {
                        if (Model.Count() > 0)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td> <a href="#" onclick="ViewAppraisalDoc(`@item.DocNo`);" class="btn btn-success BtnPadding" id="ViewDoc">View Document</a></td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DocNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Employee_Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Strategy_Plan_ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Contract_Year)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.End_Date)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" style="color:red">
                                    No Records Found
                                </td>
                            </tr>
                        }
                    }
                }
            }
        </tbody>
    </table>
</div>




