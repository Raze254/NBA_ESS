@model IEnumerable<Latest_Staff_Portal.ViewModel.CommitteeAppointmentVouchers>

<div class="table-responsive">
    <table id="datatable-buttons" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
        <thead style="background-color:black;color:white">
            <tr>
                <th>Action</th>
                <th>Document No</th>
                <th>Document Type</th>
              @*  <th>Committee Type ID</th>
                <th>Vacancy ID</th>*@
                <th>Document Date</th>
                <th>Description</th>
                <th>Appointment Effective Date</th>
                <th>Tenure End Date</th>
                @*<th>Appointing Authority</th>*@
                <th>Raised By</th>
                <th>Staff ID</th>
                <th>Name</th>
                @*<th>Terms of Reference</th>*@
                <th>Additional Brief</th>
                <th>Venue</th>
                <th>Approval Status</th>
                
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="button" onclick="ViewDoc('@item.Document_No');" style="background: #162f25; color: whitesmoke; border-radius: 10px;" value="Select" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Document_No)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Document_Type)
                    </td>
                   @* <td>
                        @Html.DisplayFor(modelItem => item.Committee_Type_ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vacancy_ID)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Document_Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Appointment_Effective_Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tenure_End_Date)
                    </td>
                   @* <td>
                        @Html.DisplayFor(modelItem => item.Appointing_Authority)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Raised_By)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Staff_ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.Terms_of_Reference)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Additional_Brief)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Venue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Approval_Status)
                    </td>
                   
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    $("#datatable-buttons").DataTable({
        lengthChange: true,
        lengthMenu: [5, 10, 25, 50, 100] // Same options for the second table
    });
</script>
