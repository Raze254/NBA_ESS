@model Latest_Staff_Portal.ViewModel.PMMUCard



<div class="card-body">
    <div class="row">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-md-12">
            <div class="form-group">
                @Html.Label("Contract Number", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.No, new { htmlAttributes = new { @class = "form-control", @id = "Contract_No", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.No, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-12">
            <div class="form-group">
                @Html.Label("Description", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @id = "Description2" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-12">
            <div class="form-group">
                @Html.Label("Strategy Plan ID", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownListFor(m => m.Strategy_Plan_ID, Model.ListOfStrategyPlanID, "Select Option--", new { @class = "form-control", @id = "Strategy_Plan_ID2" })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

       


        @{
            string LoggedInUSerID = Model.Responsible_Employee_No;

            if (Model.PMMU_Document_Stage == "Negotiation")
            {
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.Label("Negotiation Panel", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.DropDownListFor(m => m.Target_Setting_Commitee, Model.ListOfNegotiationCommittee, "Select Option--", new { @class = "form-control", @id = "Target_Setting_Committee2" })
                        @Html.ValidationMessageFor(model => model.Evaluation_Committee, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        @Html.Label("Evaluation Panel", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.DropDownListFor(m => m.Evaluation_Committee, Model.ListOfEvaluationCommittee, "Select Option--", new { @class = "form-control", @id = "Evaluation_Committee2", @disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.Evaluation_Committee, "", new { @class = "text-danger" })
                    </div>
                </div>

            }

            if (Model.PMMU_Document_Stage == "Evaluation")
            {
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.Label("Negotiation Panel", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.DropDownListFor(m => m.Target_Setting_Commitee, Model.ListOfNegotiationCommittee, "Select Option--", new { @class = "form-control", @id = "Target_Setting_Committee2", @disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.Evaluation_Committee, "", new { @class = "text-danger" })
                    </div>
                </div>

                if (@Model.Approval_Status == "Pending Approval")
                {
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.Label("Evaluation Panel ", htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.DropDownListFor(m => m.Evaluation_Committee, Model.ListOfEvaluationCommittee, "Select Option--", new { @class = "form-control", @id = "Evaluation_Committee2", @disabled = "disabled" })
                            @Html.ValidationMessageFor(model => model.Evaluation_Committee, "", new { @class = "text-danger" })
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.Label("Evaluation Panel ", htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.DropDownListFor(m => m.Evaluation_Committee, Model.ListOfEvaluationCommittee, "Select Option--", new { @class = "form-control", @id = "Evaluation_Committee2" })
                            @Html.ValidationMessageFor(model => model.Evaluation_Committee, "", new { @class = "text-danger" })
                        </div>
                    </div>
                }

            }
        }




    </div>
    @*  <div class="form-group row text-center">
            <input type="button" class="btn btn-primary waves-effect waves-light" value="Submit Request" onclick="SubmitPMMU();" />
        </div>*@
</div>

