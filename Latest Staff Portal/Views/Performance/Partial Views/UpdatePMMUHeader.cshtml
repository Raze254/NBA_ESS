    document.getElementById("Evaluation_Committee5").addEventListener("mousedown", function (e) {
        e.preventDefault();
    });
    document.getElementById("Target_Setting_Committee5").addEventListener("mousedown", function (e) {
        e.preventDefault();
    });
</script>