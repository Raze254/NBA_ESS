@model Latest_Staff_Portal.ViewModel.PettyCashVoucherLines

@{
    ViewBag.Title = "NewPettyCashVoucherLine";
}


<div class="row">
    <div class="col-md-12" hidden>
        <div class="form-group" >
            @Html.Label("Account Type", htmlAttributes: new { @class = "control-label col-md-2" })
            <select class="form-control" id="Account_Type">
                <option value="2" selected>GL Account</option>
            </select>


        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group">
            @Html.Label("Account", htmlAttributes: new { @class = "control-label col-md-2" })
            @*@Html.EditorFor(model => model.Account_No, new { htmlAttributes = new { @class = "form-control", @id = "Account_No", @readonly = "readonly" } })*@
            @Html.DropDownListFor(model => model.Account_No, Model.ListOfAccounts, "Select Option", new { @class = "form-control", @id = "Account_No" })
        </div>
    </div>

    <div class="col-md-12">
        <div class="form-group">
            @Html.Label("Account Name", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Account_Name, new { htmlAttributes = new { @class = "form-control", @id = "Account_Name", @readonly = "readonly" } })
            @*  @Html.DropDownListFor(model => model.Account_No, Model.ListOfAccounts, "Select Oprion", new { @class = "form-control", @id = "Account_No" })
            *@
        </div>
    </div>


    <div class="col-md-12">
        <div class="form-group">
            @Html.Label("Amount", htmlAttributes: new { @class = "control-label col-md-2" })

            @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control", @id = "Amount" } })
            @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-6" hidden>
        <div class="form-group">
            @Html.Label("Net Amount", htmlAttributes: new { @class = "control-label col-md-2" })

            @Html.EditorFor(model => model.Net_Amount, new { htmlAttributes = new { @class = "form-control", @id = "Net_Amount" } })
            @Html.ValidationMessageFor(model => model.Net_Amount, "", new { @class = "text-danger" })
        </div>
    </div>
</div>

<div align="center">
    <input type="button" class="btn btn-primary action-buttons" value="Submit" onclick="SubmitPettyCashVoucherLine();" />
</div>



