@model Latest_Staff_Portal.ViewModel.KpiAppraisal

@{
    ViewBag.Title = "NewKPI";
    var Line_No = ViewBag.Line_No;
    var totalWeight=ViewBag.totalWeight;
}

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            @Html.Label("Appraisal No", htmlAttributes: new { @class = "control-label col-md-2" })

            @Html.EditorFor(model => model.Appraisal_No, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @id = "Appraisal_No2" } })
            @Html.ValidationMessageFor(model => model.Appraisal_No, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-12"  hidden >
            <div class="form-group">
                @Html.Label("Line No", htmlAttributes: new { @class = "control-label col-md-2" })
                <input class="form-control" id="Line_No2" readonly value="@Line_No"  />

            </div>
        </div>
    <div class="col-md-12">
        <div class="form-group">
            @Html.Label("Perfomance Goals & Targets", htmlAttributes: new { @class = "control-label col-md-2" })

            @Html.EditorFor(model => model.Perfomance_Goals_and_Targets, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @id = "Perfomance_Goals_and_Targets2" } })
            @Html.ValidationMessageFor(model => model.Perfomance_Goals_and_Targets, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group">
            @Html.Label("KPI", htmlAttributes: new { @class = "control-label col-md-2" })

            @Html.EditorFor(model => model.KPI, new { htmlAttributes = new { @class = "form-control", @id = "KPI2" } })
            @Html.ValidationMessageFor(model => model.KPI, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group">
            @Html.Label("Weight", htmlAttributes: new { @class = "control-label col-md-2" })

            @Html.EditorFor(model => model.Weight, new
            {
                htmlAttributes = new
                {
                    @class = "form-control",
                    @id = "Weight2",
                    type = "number",
                    step = "0.01",
                    min = "0"
                }
            })
            @Html.ValidationMessageFor(model => model.Weight, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
<div align="center">
    <input type="button" class="btn btn-primary action-buttons" value="Submit" onclick="SubmitKPI(`@totalWeight`);" />
</div>
