@model IEnumerable<Latest_Staff_Portal.ViewModel.LeaveApplicationRecall>

<div class="pre-scrollable">
    <table id="datatable-buttons" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
        <thead style="background-color:black;color:white">
        <tr>
            <th>Action</th>
            <th>Recall No</th>
            <th>Application No</th>
            <th>Employee No</th>
            <th>Employee Name</th>
            <th>Leave Code</th>
            <th>Days Applied</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Application Date</th>
            <th>Approved Days</th>
            <th>Approved Start Date</th>
            <th>Days Recalled</th>
            <th>Recall Date From</th>
            <th>Recall Date To</th>
            <th>Reason for Recall</th>
            <th>Posted</th>
        </tr>
        </thead>
        <tbody>
        @if (Model != null && Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="button" onclick="SelectedRow('@item.Recall_No','@item.Posted');" style="background: #162f25; color:whitesmoke; border-radius:10px" value="Select"/>
                    </td>
                    <td>@item.Recall_No</td>
                    <td>@item.Application_No</td>
                    <td>@item.Employee_No</td>
                    <td>@item.Employee_Name</td>
                    <td>@item.Leave_Code</td>
                    <td>@item.Days_Applied</td>
                    <td>@item.Start_Date</td>
                    <td>@item.End_Date</td>
                    <td>@item.Application_Date</td>
                    <td>@item.Approved_Days</td>
                    <td>@item.Approved_Start_Date</td>
                    <td>@item.Days_Recalled</td>
                    <td>@item.Recall_Date_From</td>
                    <td>@item.Recall_Date_To</td>
                    <td>@item.Reason_for_Recall</td>
                    <td>@item.Posted</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="17" style="color:red">
                    No Records Found
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>