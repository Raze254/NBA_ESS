@{
    Layout = null;
    var Greetings = "";
    if (DateTime.Now.Hour >= 0 && DateTime.Now.Hour < 12)
    {
        Greetings = "Good Morning";
    }
    else if (DateTime.Now.Hour >= 12 && DateTime.Now.Hour < 17)
    {
        Greetings = "Good Afternoon";
    }
    else
    {
        Greetings = "Good Evening";
    }
}

<!DOCTYPE html>
<style>

