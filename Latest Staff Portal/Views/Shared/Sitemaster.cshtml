    <style>





        :root {
            --purple: #9a6cac;
            --deep-purple: #f9ad55;
            --black: #373637;
            --white: #ffffff;
            --light-gray: #f4f4f4;
            --dark-gray: #555555;
            --medium-gray: #e0e0e0;
            --transition-speed: 0.3s;
            --sidebar-bg: #ffffff;
            --active-link-bg: #5c8a64; /*#f7921f*/
            --active-link-color: #ffffff;
        }

        /* Dark mode variables */
        [data-theme="dark"] {
            --sky-blue: #04acec;
            --sky-blue-light: #36c7f0;
            --sky-blue-lighter: #68dcf5;
            --sky-blue-dark: #038bb8;
            --sky-blue-darker: #026a85;
            --black: #e0e0e0;
            --white: #2d2d2d;
            --light-gray: #1a1a1a;
            --dark-gray: #b0b0b0;
            --medium-gray: #404040;
            --light-sky-blue: #0a2a3d;
            --sidebar-bg: #2d2d2d;
            --active-link-bg: #404040;
            --active-link-color: #ccc;
        }

        /* Add theme toggle button styles */
        .theme-toggle {
            border: none;
            background: none;
            font-size: 1.2rem;
            margin-right: 1rem;
            color: var(--dark-gray);
            transition: all 0.3s ease;
        }

            .theme-toggle:hover {
                color: var(--black);
                transform: rotate(20deg);
            }

        [data-theme="dark"] .theme-toggle {
            color: var(--dark-gray);
        }

            [data-theme="dark"] .theme-toggle:hover {
                color: var(--black);
            }




        body {
            background-color: var(--light-gray);
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            overflow-x: hidden;
        }

        #sidebar {
            min-height: 100vh;
            background-color: var(--sidebar-bg);
            color: var(--black);
            transition: all var(--transition-speed) cubic-bezier(0.4, 0, 0.2, 1);
            border-right: 1px solid var(--medium-gray);
            width: 270px;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 999;
            overflow-x: hidden;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.05);
        }

        .menu-title {
            font-size: 14px;
            font-weight: 600;
        }

        .menu-subtitle {
            font-size: 14px;
        }

        #sidebar.collapsed {
            width: 70px;
        }

            #sidebar.collapsed:hover {
                width: 250px;
            }

        #sidebar .logo-container {
            padding: 15px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            border-bottom: 1px solid var(--medium-gray);
            margin-left: 20px !important
        }

        #sidebar.collapsed .logo-container {
            justify-content: center;
        }

        #sidebar.collapsed:hover .logo-container {
            justify-content: space-between;
        }

        #sidebar .logo {
            font-size: 22px;
            font-weight: bold;
            color: var(--black);
            display: flex;
            align-items: center;
            white-space: nowrap;
        }

            #sidebar .logo i {
                color: var(--purple);
                margin-right: 10px;
                font-size: 24px;
                transition: all var(--transition-speed);
            }

        #sidebar.collapsed .logo span {
            opacity: 0;
            width: 0;
            transition: opacity var(--transition-speed);
        }

        #sidebar.collapsed:hover .logo span {
            opacity: 1;
            width: auto;
        }

        #sidebar.collapsed .logo i {
            margin-right: 0;
        }

        .logo-image {
            width: 50px;
            height: auto;
        }

        #sidebar.collapsed:hover .logo i {
            margin-right: 10px;
        }

        #toggle-btn {
            cursor: pointer;
            color: var(--dark-gray);
            background: transparent;
            border: none;
            font-size: 20px;
            transition: transform var(--transition-speed);
        }

            #toggle-btn:hover {
                color: var(--deep-purple);
            }

        #sidebar.collapsed #toggle-btn {
            transform: rotate(180deg);
        }

        #sidebar .nav-item {
            margin: 5px 10px;
            border-radius: 5px;
            transition: all var(--transition-speed);
            overflow: hidden;
            position: relative;
        }

            #sidebar .nav-item:hover {
                background-color: var(--light-gray);
            }

            #sidebar .nav-item.active {
                background-color: var(--active-link-bg);
            }

                #sidebar .nav-item.active > a {
                    color: var(--active-link-color) !important;
                }

        #sidebar .nav-link {
            color: var(--black);
            padding: 5px 10px;
            display: flex;
            align-items: center;
            white-space: nowrap;
            overflow: hidden;
            justify-content: space-between;
            transition: all var(--transition-speed);
        }

            #sidebar .nav-link:hover {
                color: var(--deep-purple);
            }

        #sidebar .nav-link-simple {
            justify-content: flex-start;
        }

        #sidebar .nav-link i.menu-icon {
            min-width: 25px;
            margin-right: 7px;
            font-size: 16px;
            transition: all var(--transition-speed);
        }

        #sidebar.collapsed .nav-link span,
        #sidebar.collapsed .nav-link i:not(.menu-icon) {
            opacity: 0;
            width: 0;
            transition: opacity var(--transition-speed), width var(--transition-speed);
        }

        #sidebar.collapsed:hover .nav-link span,
        #sidebar.collapsed:hover .nav-link i:not(.menu-icon) {
            opacity: 1;
            width: auto;
        }

        #sidebar.collapsed .nav-link i.menu-icon {
            margin-right: 0;
        }

        #sidebar.collapsed:hover .nav-link i.menu-icon {
            margin-right: 10px;
        }

        #sidebar .submenu {
            list-style: none;
            padding-left: 0;
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.4s cubic-bezier(0, 1, 0, 1);
            margin-left: 0;
        }

            #sidebar .submenu.show {
                max-height: 1000px;
                transition: max-height 0.4s ease-in-out;
            }

            #sidebar .submenu .nav-item {
                margin: 5px 0 5px 35px;
                width: calc(100% - 45px);
            }

        #sidebar.collapsed .submenu .nav-item {
            margin: 5px 0 5px 5px;
            width: calc(100% - 15px);
        }

        #sidebar.collapsed:hover .submenu .nav-item {
            margin: 5px 0 5px 35px;
            width: calc(100% - 45px);
        }

        .wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        #content {
            margin-left: 270px;
            padding: 15px;
            transition: margin-left var(--transition-speed) cubic-bezier(0.4, 0, 0.2, 1);
            /*min-height: 100vh;*/
            flex: 1;
            /*margin-bottom: 30px;*/
        }

        .footer {
            padding-top: 10px;
            /* padding-bottom: 10px;*/
            text-align: center;
            margin-left: 250px;
            margin-bottom: -15px
        }

        #content.expanded {
            margin-left: 70px;
        }

        .navbar {
            background-color: var(--white);
            border-bottom: 1px solid var(--medium-gray);
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
            border-radius: 8px;
            margin-bottom: 20px;
            transition: all var(--transition-speed);
        }

        .avatar-dropdown .dropdown-toggle {
            display: flex;
            align-items: center;
            text-decoration: none;
            background-color: var(--white);
            border-bottom: 1px solid var(--medium-gray);
        }

            .avatar-dropdown .dropdown-toggle::after {
                display: none;
            }

        .avatar-dropdown .avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            overflow: hidden;
            margin-right: 10px;
            background-color: var(--light-gray);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 18px;
            color: var(--black);
            font-weight: bold;
            transition: all var(--transition-speed);
        }

            .avatar-dropdown .avatar:hover {
                transform: scale(1.05);
            }

        .avatar-dropdown .dropdown-menu {
            border-radius: 8px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            border: none;
            padding: 10px 0;
            min-width: 200px;
            animation: fadeInDown 0.3s;
        }

        @@keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .avatar-dropdown .dropdown-item {
            padding: 8px 20px;
            color: var(--black);
            transition: all 0.2s;
        }

            .avatar-dropdown .dropdown-item:hover {
                background-color: var(--light-gray);
                transform: translateX(5px);
            }

            .avatar-dropdown .dropdown-item i {
                margin-right: 10px;
                width: 16px;
            }

        .navbar-toggler {
            display: none;
            border: none;
            color: var(--black);
            font-size: 22px;
            transition: transform 0.2s;
        }

            .navbar-toggler:hover {
                transform: scale(1.1);
            }

        /* Animation classes */
        .animate-spin {
            animation: spin 0.5s;
        }

        @@keyframes spin {
            from {
                transform: rotate(0deg);
            }

            to {
                transform: rotate(360deg);
            }
        }

        .pulse {
            animation: pulse 1s;
        }

        @@keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }

            100% {
                transform: scale(1);
            }
        }

        .slide-in {
            animation: slideIn 0.3s;
        }

        @@keyframes slideIn {
            from {
                transform: translateX(-20px);
                opacity: 0;
            }

            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        /* Mobile styles */
        @@media (max-width: 768px) {
            #sidebar {
                margin-left: -250px;
                width: 250px;
            }

                #sidebar.mobile-active {
                    margin-left: 0;
                    width: 250px;
                }

                #sidebar.collapsed {
                    margin-left: -70px;
                    width: 70px;
                }

                    #sidebar.collapsed.mobile-active {
                        margin-left: 0;
                        width: 250px;
                    }

            #content {
                margin-left: 0;
            }

                #content.expanded {
                    margin-left: 0;
                }

            .footer {
                margin-left: 0px;
            }

            .navbar-toggler {
                display: block;
            }
            /* Overlay when mobile sidebar is active */
            .sidebar-overlay {
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.5);
                z-index: 998;
                display: none;
                animation: fadeIn 0.3s;
            }

                .sidebar-overlay.active {
                    display: block;
                }

            @@keyframes fadeIn {
                from {
                    opacity: 0;
                }

                to {
                    opacity: 1;
                }
            }
        }

        .logo-image {
            height: 80px;
            width: 150px;
            object-fit: contain; /* maintains aspect ratio */
        }
        /* Default styles */
        .logo2 span {
            display: none;
        }

        #sidebar.collapsed .logo span {
            display: none;
        }

        #sidebar.collapsed .logo2 span {
            display: block;
        }

        .logo-image {
            width: 150px;
            max-width: 100%;
            height: auto;
            transition: width 0.3s ease;
        }

        /* Optional: Resize image when collapsed */
        #sidebar.collapsed .logo-image {
            width: 150px;
        }

        .avatar-dropdown .dropdown-menu {
            left: auto !important;
            right: 0 !important;
            transform: none !important;
            z-index: 1100;
            min-width: 200px;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
