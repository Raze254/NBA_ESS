    <script>
        $(document).ready(function () {
            // Single open collapsible implementation
            $('.nav-link[data-bs-toggle="collapse"]').on('click', function () {
                var target = $(this).attr('href');
                var isTargetShown = $(target).hasClass('show');

                // Close all other collapsibles
                $('.submenu.collapse.show').each(function () {
                    if (this.id !== target.substring(1)) {
                        $(this).collapse('hide');
                        $(this).prev('.nav-link').find('.fa-chevron-down').removeClass('fa-rotate-180');
                    }
                });

                // Toggle current
                if (!isTargetShown) {
                    $(target).collapse('show');
                    $(this).find('.fa-chevron-down').addClass('fa-rotate-180');
                }
            });



        });

        // Update Bootstrap collapse to close others when one opens
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.submenu.collapse').forEach(collapse => {
                collapse.addEventListener('show.bs.collapse', function () {
                    const openCollapses = document.querySelectorAll('.submenu.collapse.show');
                    openCollapses.forEach(openCollapse => {
                        if (openCollapse !== collapse) {
                            bootstrap.Collapse.getInstance(openCollapse).hide();
                        }
                    });
                });
            });
        });
    </script>
