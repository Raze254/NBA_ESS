                    new SelectListItem { Text = "Mobility", Value = "1" },
                    new SelectListItem { Text = "Recruitment", Value = "2" },
                    new SelectListItem { Text = "Disciplinary", Value = "3" },
                    new SelectListItem { Text = "Training", Value = "4" },
                    new SelectListItem { Text = "Records", Value = "5" },
                    new SelectListItem { Text = "Salaries", Value = "6" },
                    new SelectListItem { Text = "Welfare", Value = "7" }
                }, "Value", "Text", Model.Source_Document), "--Select Source Document--", new { id = "ddlSource", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Source_Document, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            @Html.Label("Reference Details", new { @class = "control-label col-md-12" })
