            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            @Html.Label("Source Document", new { @class = "control-label col-md-12" })

            <div class="col-md-12">
                @Html.DropDownListFor(m => m.Source_Document, new SelectList(new[]
