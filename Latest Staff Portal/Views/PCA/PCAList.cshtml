@model IEnumerable<Latest_Staff_Portal.ViewModel.PayChangeAdvice>


<table id="datatable-buttons" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
    <thead style="background-color:black;color:white">
    <tr>
        <th>Action</th>
        <th>No</th>
        <th>Pj No</th>
        <th>Name</th>

        <th>Payroll Period</th>
        <th>Comments</th>

        <th>Status</th>
    </tr>
    </thead>
    <tbody>
    @{
        if (Model != null && Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="button" onclick="ViewDoc('@item.ChangeAdviceSerialNo');" style="background: #162f25; color:whitesmoke; border-radius:10px" value="Select"/>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChangeAdviceSerialNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PayrollPeriod)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comments)
                    </td>
                    @*<td>
            @Html.DisplayFor(modelItem => item.RespC)
        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" style="color:red">
                    No Records Found
                </td>
            </tr>
        }
    }
    </tbody>
</table>