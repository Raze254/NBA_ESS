@model IEnumerable<Latest_Staff_Portal.ViewModel.TransportReqList>
<table id="datatable-buttons" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
    <thead style="background-color:black;color:white">
    <tr>
        <th></th>
        <th>No</th>
        <th>Commencement</th>
        <th>Destination</th>
        <th>Vehicle</th>
        <th>Driver</th>
        <th>Date Requested</th>
        <th>Date Of Trip</th>
        <th>Return Date</th>
        <th>No Of Days</th>
        @*<th>Category</th>*@
        <th>Status</th>
    </tr>
    </thead>
    <tbody>
    @{
        if (Model != null && Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="button" onclick="SelectedRow('@item.No','@item.Status');" style="background: #162f25; color:whitesmoke; border-radius:10px" value="Select"/>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.No)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Commencement)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Destination)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vehicle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Driver)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateRequested)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfTrip)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReturnDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NoOfDays)
                    </td>
                    @*<td>
                                @Html.DisplayFor(modelItem => item.TransportCategory)
                            </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" style="color:red">
                    No Records Found
                </td>
            </tr>
        }
    }
    </tbody>
</table>