            @{

                if (Model.Status == "Open")
                {
                    <button class="btn btn-primary action-buttons2" onclick="SendTransportReqDocForApproval('@Model.Transport_Requisition_No');">
                        <i class="fa fa-check" aria-hidden="true"></i> Send (@Model.Transport_Requisition_No) For Approval
                    </button>

                }

                if (Model.Status == "Pending Approval")
                {
                    <button class="btn btn-danger btn-sm" onclick="CancelTransportReqDocApproval('@Model.Transport_Requisition_No');">
                        <i class="fa fa-times" aria-hidden="true"></i> Cancel Approval Request
                    </button>
                    <button class="btn btn-primary action-buttons2" onclick="ViewApprovalTrail('@Model.Transport_Requisition_No');">
                        <i class="fa fa-history" aria-hidden="true"></i> Approval Trail
                    </button>



                }

                <button class="btn btn-primary action-buttons2" onclick="ViewComments('@Model.Transport_Requisition_No');">
                    <i class="fa fa-list" aria-hidden="true"></i> Approval / Rejection Comments
                </button>
