@model Latest_Staff_Portal.ViewModel.PerformanceIndicator
<div class="bg-soft-dark" style="color:black">
    <div class="row">
        <div class="col-md-6">
            <span style="font-weight: bold">Objective</span>
            @Html.TextAreaFor(model => model.Objective, new { @class = "form-control", id = "txtObj" })
        </div>
        <div class="col-md-6">
            <span style="font-weight: bold">KRA</span>
            @Html.TextAreaFor(model => model.KRA, new { @class = "form-control", id = "txtKRA" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <span style="font-weight: bold">KPI</span>
            @Html.TextAreaFor(model => model.KPI, new { @class = "form-control", id = "txtKPI" })
        </div>
        <div class="col-md-6">
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <span style="font-weight: bold">Target</span>
            @Html.TextAreaFor(model => model.Target, new { @class = "form-control", id = "txtTarget" })
        </div>
        <div class="col-md-6">
            <span style="font-weight: bold">Weight(%)</span>
            @Html.TextBoxFor(model => model.Weight, new { @class = "form-control", id = "txtWeight", onkeypress = "return functionDecimal(event,this.value)" })
        </div>
    </div>
    <hr/>
    @if (Model.Update)
    {
        <div align="center">
            <input type="button" class="btn btn-primary" value="Update Record" onclick="UpdateKPIRecord(`@Model.Line_No`);"/>
        </div>
    }
    else
    {
        <div align="center">
            <input type="button" class="btn btn-primary" value="Save Record" onclick="SaveKPIRecord();"/>
        </div>
    }
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#ddlUnit").val(`@Model.Unit`).change();
        $("#ddlQs").val(`@Model.TimeFrame`).change();
    });
    function functionDecimal(evt, val) {
        try {
            var charCode = (evt.which) ? evt.which : event.keyCode;

            if (charCode == 46) {
                if (!(val.indexOf(".") > -1)) {
                    return true;
                }
                else {
                    Swal.fire('Warning', 'Kindly ensure to specify decimals only', 'warning');
                }
            }
            if (charCode > 31 && (charCode < 48 || charCode > 57)) {
                Swal.fire('Warning', 'Kindly ensure to specify decimals only', 'warning');
                return false;
            }
            return true;
        } catch (w) {
            Swal.fire(w);
        }
    }
    function functionx(evt) {
        if (evt.charCode > 31 && (evt.charCode < 48 || evt.charCode > 57)) {
            Swal.fire("Error", "Please enter only numeric characters in the text box", "error");
            return false;
        }
    }
</script>