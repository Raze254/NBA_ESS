    }
    var LoadMGRValuesCompe = function (DocNo) {
        $.ajax({
            async: true,
            type: "post",
            contentType: "application/json; charset = utf-8",
            data: JSON.stringify({ AppDoc: DocNo }),
            url: "/ANUPEAisal/LoadMGRCoreCompetenceValues",
            success: function (data) {
                $("#divMgrCoreCompVal").html(data);
            },
            error: function () {
                Swal.fire("There is some problem to process your request. Please try after some time");
            }
        });
    }
    var LoadTrainingConferenceSeminars = function (DocNo) {
        $.ajax({
            async: true,
            type: "post",
            contentType: "application/json; charset = utf-8",
            data: JSON.stringify({ AppDoc: DocNo }),
            url: "/ANUPEAisal/LoadTrainingConferenceSeminars",
            success: function (data) {
                $("#divTrainDevmpt").html(data);
            },
            error: function () {
                Swal.fire("There is some problem to process your request. Please try after some time");
            }
        });
    }
    var LoadTrainingProjectEventsAssignment = function (DocNo) {
        $.ajax({
            async: true,
            type: "post",
            contentType: "application/json; charset = utf-8",
            data: JSON.stringify({ AppDoc: DocNo }),
            url: "/ANUPEAisal/LoadTrainingProjectEventsAssignment",
            success: function (data) {
                $("#divTrainDevmpt").html(data);
            },
            error: function () {
                Swal.fire("There is some problem to process your request. Please try after some time");
            }
        });
    }
    var AppRequisitionLink = function () {
        ShowProgress();
        var DocNo = `@Model.ApprisalCode`;
        window.location = "/ANUPEAisal/ANUPEAisalReviewScoreCard?AppDoc=" + DocNo;
    };
    var EvalKPIItem = function (DocNo, LnNo, Level) {
        $("#labelF").text("KPI Evaluation Form");
        ShowProgress();
        $.ajax({
            async: true,
            type: "POST",
            datatype: "json",
            contentType: "application/json; charset = utf-8",
            processData: false,
            data: JSON.stringify({ DocNo: DocNo, LnNo: LnNo, Level: Level }),
            url: '/ANUPEAisal/SupervosorKPIEvaluationForm',
            success: function (data) {
                $("#modalBody").html(data);
                HideProgress();
                $("#myModal").modal("show");
            },
            error: function (err) {
                HideProgress();
                Swal.fire('Warning', err, 'warning');
            }
        });
    }
    var SaveKPIReviewRecord = function (DocNo, LnNo) {
        var ResultsAchvd = $("#txtResultsAchved").val();
        var SelfAssessment = $("#txtScore").val();
        var remarks = $("#txtAppComments").val();

        if (DocNo == "") {
            Swal.fire('error', 'ANUPEAisal Doc No cannot be empty', 'error');
            return;
        }
        if (LnNo == "") {
            Swal.fire('error', 'ANUPEAisal Record Line Number Cannot be empty', 'error');
            return;
        }
        else if (SupScore == "") {
            Swal.fire('error', 'Choose Supervisor Score', 'error');
            return;
        }
        else {
            var PerformanceIndicator = {};
            PerformanceIndicator.ANUPEAisal_No = DocNo;
            PerformanceIndicator.Line_No = LnNo;
            PerformanceIndicator.Supervisors_Score = SupScore;
            PerformanceIndicator.Agreed_Score = AgreedScore;
            PerformanceIndicator.Supervisor_Comments = remarks;

            ShowProgress();
            $.ajax({
                type: "post",
                url: "/ANUPEAisal/SubmitKPIsEvaluationSup",
                data: JSON.stringify({ kpi: PerformanceIndicator }),
                contentType: "application/json; charset = utf-8",
                success: function (data) {
                    if (data.success == true) {
                        Swal.fire('Success', data.message, 'success');
                        LoadPerformanceIndicatorReview(DocNo);
                        $("#myModal").modal("hide");
                        HideProgress();
                    }
                    else {
                        HideProgress();
                        Swal.fire('error', data.message, 'error');
                    }
                },
                error: function () {
                    HideProgress();
                    Swal.fire('error', data.message, 'error');
                }
            });
        }
    }
    var SupCommentsOnTrDev = function (DocNo, LnNo) {
        $("#labelF").text("Training & Development Comment Form");
        if (DocNo == "") {
            Swal.fire('error', 'ANUPEAisal Document No cannot be empty', 'error');
            return;
        }
        else if (LnNo == "") {
            Swal.fire('error', 'Record Line Number cannot be Empty', 'error');
            return;
        }
        else {
            ShowProgress();
            $.ajax({
                type: "post",
                url: "/ANUPEAisal/SupTrDevForm",
                data: JSON.stringify({ DocNo: DocNo, LnNo: LnNo }),
                contentType: "application/json; charset = utf-8",
                success: function (data) {
                    $("#modalBody").html(data);
                    HideProgress();
                    $("#myModal").modal("show");
                },
                error: function () {
                    HideProgress();
                    Swal.fire('error', data.message, 'error');
                }
            });
        }
    }
    var SaveSupTrainingDevComment = function (DocNo, LnNo) {
        var Comment = $("#txtSupTRDevComm").val();

        if (DocNo == "") {
            Swal.fire('error', 'ANUPEAisal Doc No cannot be empty', 'error');
            return;
        }
        if (LnNo == "") {
            Swal.fire('error', 'ANUPEAisal Record Line Number Cannot be empty', 'error');
            return;
        }
        else if (Comment == "") {
            Swal.fire('error', 'Enter Comment', 'error');
            return;
        }
        else {
            ShowProgress();
            $.ajax({
                type: "post",
                url: "/ANUPEAisal/SaveSupTrDevComments",
                data: JSON.stringify({ DocNo: DocNo, Comment: Comment, LineNo: LnNo }),
                contentType: "application/json; charset = utf-8",
                success: function (data) {
                    if (data.success == true) {
                        Swal.fire('Success', data.message, 'success');
                        LoadTrainingDevelopment(DocNo);

                        $("#myModal").modal("hide");
                        HideProgress();
                    }
                    else {
                        HideProgress();
                        Swal.fire('error', data.message, 'error');
                    }
                },
                error: function () {
                    HideProgress();
                    Swal.fire('error', data.message, 'error');
                }
            });
        }
    }
    var EvalCompValueItem = function (DocNo, LnNo, Level) {
        $("#labelEva").text("Value & Competence Evaluation Form");
        ShowProgress();
        $.ajax({
            async: true,
            type: "POST",
            datatype: "json",
            contentType: "application/json; charset = utf-8",
            processData: false,
            data: JSON.stringify({ DocNo: DocNo, LnNo: LnNo, Level: Level }),
            url: '/ANUPEAisal/SupCompValueEvaluationForm',
            success: function (data) {
                $("#modalBodyRev").html(data);
                HideProgress();
                $("#myModalRev").modal("show");
            },
            error: function (err) {
                HideProgress();
                Swal.fire('Warning', err, 'warning');
            }
        });
    }
    var SaveCompValueReviewRecord = function (DocNo, LnNo, Level) {
        var SupScore = $("#ddlSupScore").children("option:selected").val();
        var AgreedScore = $("#ddlAgreedScore").children("option:selected").val();

        if (DocNo == "") {
            Swal.fire('error', 'ANUPEAisal Doc No cannot be empty', 'error');
            return;
        }
        if (LnNo == "") {
            Swal.fire('error', 'ANUPEAisal Record Line Number Cannot be empty', 'error');
            return;
        }
        else if (SupScore == "") {
            Swal.fire('error', 'Choose Supervisor Score', 'error');
            return;
        }
        else {
            var CompetenceValues = {};
            CompetenceValues.ANUPEAisal_No = DocNo;
            CompetenceValues.Line_No = LnNo;
            CompetenceValues.Sup_Score = SupScore;
            CompetenceValues.Agreed_Score = AgreedScore;

            ShowProgress();
            $.ajax({
                type: "post",
                url: "/ANUPEAisal/SubmitSupervisorCompValueEvaluation",
                data: JSON.stringify({ CValues: CompetenceValues }),
                contentType: "application/json; charset = utf-8",
                success: function (data) {
                    if (data.success == true) {
                        Swal.fire('Success', data.message, 'success');
                        if (Level == "1") {
                            LoadValuesCompe(DocNo);
                        }
                        else {
                            LoadMGRValuesCompe(DocNo);
                        }

                        $("#myModalRev").modal("hide");
                        HideProgress();
                    }
                    else {
                        HideProgress();
                        Swal.fire('error', data.message, 'error');
                    }
                },
                error: function () {
                    HideProgress();
                    Swal.fire('error', data.message, 'error');
                }
            });
        }
    }
    var LoadEmpExtraInf = function (DocNo, Title, EntryType, DivID) {
        $.ajax({
            async: true,
            type: "post",
            contentType: "application/json; charset = utf-8",
            data: JSON.stringify({ AppDoc: DocNo, Level: "S", Title: Title, EntryType: EntryType }),
            url: "/ANUPEAisal/LoadOtherEmployeeANUPEAisalInf",
            success: function (data) {
                $("#" + DivID).html(data);
            },
            error: function () {
                Swal.fire("There is some problem to process your request. Please try after some time");
            }
        });
    }
    var AddEmpExtra = function (Title, Section) {
        $("#labelF").text(Title);
       var DocNo = `@Model.ApprisalCode`;
        ShowProgress();
        $.ajax({
            async: true,
            type: "POST",
            datatype: "json",
            contentType: "application/json; charset = utf-8",
            processData: false,
            data: JSON.stringify({ DocNo: DocNo, Section: Section }),
            url: '/ANUPEAisal/GetExtraEmpInfoForm',
            success: function (data) {
                $("#modalBody").html(data);
                HideProgress();
                $("#myModal").modal("show");
            },
            error: function (err) {
                HideProgress();
                Swal.fire('Warning', err, 'warning');
            }
        });
    }
    var SaveExtraInfRecord = function (DocNo, EntrType) {
        var remarks = $("#txtDescr").val();

        if (DocNo == "") {
            Swal.fire('error', 'ANUPEAisal Doc No cannot be empty', 'error');
            return;
        }
        else if (remarks == "") {
            Swal.fire('error', 'Enter Value', 'error');
            return;
        }
        else {
            ShowProgress();
            $.ajax({
                type: "post",
                url: "/ANUPEAisal/SubmitEmpExtraInf",
                data: JSON.stringify({ DocNo: DocNo, EntryType: EntrType, Descr: remarks }),
                contentType: "application/json; charset = utf-8",
                success: function (data) {
                    if (data.success == true) {
                        Swal.fire('Success', data.message, 'success');
                        if (EntrType == "1") {
                            LoadEmpExtraInf(DocNo, "Strength", '1', "divEmpStrength");
                        }
                        else if (EntrType == "2") {
                            LoadEmpExtraInf(DocNo, "Weakness", '2', "divEmpWeakness");
                        }
                        else if (EntrType == "3") {
                            LoadEmpExtraInf(DocNo, "Area(s) of Performance Improvement", '3', "divEmpAreaOfImprovement");
                        }
                        else if (EntrType == "4") {
                            LoadEmpExtraInf(DocNo, "Expected Standard(s) of Performance", '4', "divEmpExpectedPerformance");
                        }
                        else { }
                        $("#myModal").modal("hide");
                        HideProgress();
                    }
                    else {
                        HideProgress();
                        Swal.fire('error', data.message, 'error');
                    }
                },
                error: function () {
                    HideProgress();
                    Swal.fire('error', data.message, 'error');
                }
            });
        }
    }
    var SendDocTo = function (SendTo) {
        var DocNo = `@Model.ApprisalCode`;
        ShowProgress();
        $.ajax({
            async: true,
            type: "POST",
            datatype: "json",
            data: JSON.stringify({ DocNo: DocNo, SendTo: SendTo }),
            contentType: "application/json; charset = utf-8",
            processData: false,
            url: '/ANUPEAisal/SendDocumentTo',
            success: function (data) {
                if (data.success == true) {
                    window.location = "/ANUPEAisal/MyReviewANUPEAisalList";
                }
                else {
                    HideProgress();
                    Swal.fire('Error', data.message, 'error');
                }
            },
            error: function (err) {
                Swal.fire('Warning', err, 'warning');
            }
        });
    }
    var SaveComments = function (section) {
        var DocNo = `@Model.ApprisalCode`;
        if (DocNo == "") {
            Swal.fire('error', 'ANUPEAisal Doc No cannot be empty', 'error');
            return;
        }
        else {
            var comments = $("#GeneralANUPEAisorComments").val();
            if (comments == "") {
                Swal.fire('error', 'Enter supervisor General Comment', 'error');
                return;
            }
            else {
                SubmitSectionComments(DocNo, "1", comments);
            }
        }
    }
    var SubmitSectionComments = function (DocNo, from, comment) {
        ShowProgress();
        $.ajax({
            type: "post",
            url: "/ANUPEAisal/SaveANUPEAisalComments",
            data: JSON.stringify({ DocNo: DocNo, Comment: comment, from: from }),
            contentType: "application/json; charset = utf-8",
            success: function (data) {
                if (data.success == true) {
                    Swal.fire('Success', data.message, 'success');
                    HideProgress();
                    LoadGeneralComments(DocNo);
                    $("#myModal").modal("hide");
                }
                else {
                    HideProgress();
                    Swal.fire('error', data.message, 'error');
                }
            },
            error: function () {
                HideProgress();
                Swal.fire('error', data.message, 'error');
            }
        });
    }
</script>