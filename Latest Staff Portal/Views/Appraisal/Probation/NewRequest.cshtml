@model Latest_Staff_Portal.ViewModel.NewApprisalRequest
<div class="card-body">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.Label("Apprisal Period", new { @class = "control-label col-md-12" })
                <div class="col-md-12">
                    @Html.DropDownListFor(model => model.ANUPEAisalPeriod, Model.ListOfApprisalPeriods, "--select Apprisal Period--", new { @class = "form-control", id = "ddlApprPeriod" })
                    @Html.ValidationMessageFor(model => model.ANUPEAisalPeriod, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.Label("Supervisor", new { @class = "control-label col-md-12" })
                <div class="col-md-12">
                    @Html.DropDownListFor(model => model.No, Model.ListOfEmpList, "--select Supervisor--", new { @class = "form-control", id = "ddlSup" })
                    @Html.ValidationMessageFor(model => model.No, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <hr/>
    <div align="center">
        <input type="button" class="btn btn-primary waves-effect waves-light" value="Create Probation Document" onclick="SubmitANUPEAisalRequisition();"/>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#ddlSup").select2({
            width: '100%',
            placeholder: 'Search...'
        });
    });
</script>