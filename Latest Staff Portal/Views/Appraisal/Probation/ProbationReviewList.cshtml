@model IEnumerable<Latest_Staff_Portal.ViewModel.ANUPEAisalCardList>
<div class="pre-scrollable">
    <table id="tableScoreCard" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
        <thead>
        <tr>
            <th>Action</th>
            <th>Apprisal Code</th>
            <th>Staff Name</th>
            <th>ANUPEAisal Period</th>
            <th>Open To</th>

        </tr>
        </thead>
        <tbody>
        @{
            if (Model != null)
            {
                {
                    if (Model.Count() > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a href="#" onclick="SelectedRow('@item.ApprisalCode');">Select</a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ApprisalCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StaffName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ApprisalPeriod)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" style="color:red">
                                No Records Found
                            </td>
                        </tr>
                    }
                }
            }
        }
        </tbody>
    </table>
</div>