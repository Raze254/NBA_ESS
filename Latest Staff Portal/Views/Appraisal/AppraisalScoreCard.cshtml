    var ShowApprovalDiv = function () {
        var StatementT = $("#ddlStatement").children("option:selected").val();
        if (StatementT == "1") {
            $("#DivApprov").show();
            $("#divReason").hide();
        }
        else if (StatementT == "2") {
            $("#DivApprov").show();
            $("#divReason").show();
        }
        else {
            $("#DivApprov").hide();
        }
    }
    var LoadPerformanceEvalution = function (DocNo, Status) {
        ShowProgress();
        $.ajax({
            async: true,
            type: "POST",
            datatype: "json",
            contentType: "application/json; charset = utf-8",
            processData: false,
            data: JSON.stringify({ DocNo: DocNo, Status: Status }),
            url: "/ANUPEAisal/PerfomanceTargets",
            success: function (data) {
                $("#divPerformanceTargets").html(data);
                HideProgress();

            },
            error: function () {
                HideProgress();
                Swal.fire("There is some problem to process your request. Please try after some time");
            }
        });
    };
    var LoadSectionData = function () {
        ShowProgress();
        var DocNo = $("#DocNo").html();
        LoadPerformanceIndicator(DocNo);
        HideProgress();
    };
    var AddAKPI = function () {
        $("#labelF").text("KPI Form");
        ShowProgress();
        $.ajax({
            async: true,
            type: "POST",
            datatype: "json",
            contentType: "application/json; charset = utf-8",
            processData: false,
            url: '/ANUPEAisal/KPIForm',
            data: JSON.stringify({ DocNo: "", LnNo: "", Update:false }),
            success: function (data) {
                $("#modalBody").html(data);
                HideProgress();
                $("#myModal").modal("show");
            },
            error: function (err) {
                HideProgress();
                Swal.fire('Warning', err, 'warning');
            }
        });
    }
    var SaveKPIRecord = function () {
        var DocNo = $("#DocNo").html();
        var AggreedKPI = $("#txtAgrredKPI").val();
        var KPIIndicator = $("#txtKPIIndicator").val();
        var weight = $("#txtWeight").val();
        var ddlUnit = $("#ddlUnit").children("option:selected").val();
        var ddlQs = $("#ddlQs").children("option:selected").val();
        var remarks = $("#txtComments").val();

        if (DocNo == "") {
            Swal.fire('Error', 'ANUPEAisal Doc No cannot be empty', 'error');
            return;
        }
        else if (AggreedKPI == "") {
            Swal.fire('Error', 'Enter KIP', 'error');
            return;
        }
        else if (KPIIndicator == "") {
            Swal.fire('Error', 'Enter KPI Indicator', 'error');
            return;
        }
        else if (weight == "") {
            Swal.fire('Error', 'Enter Weight', 'error');
            return;
        }
        else if (ddlUnit == "") {
            Swal.fire('Error', 'Choose Unit', 'error');
            return;
        }
        else if (ddlQs == "") {
            Swal.fire('Error', 'Choose the quarter to achieve', 'error');
            return;
        }
        else {
            var PerformanceIndicator = {};
            PerformanceIndicator.ANUPEAisal_No = DocNo;
            PerformanceIndicator.Agreed_Performance_Targets = AggreedKPI;
            PerformanceIndicator.Key_Performance_Indicator = KPIIndicator;
            PerformanceIndicator.Weight = weight;
            PerformanceIndicator.Unit = ddlUnit;
            PerformanceIndicator.TimeFrame = ddlQs;
            PerformanceIndicator.ANUPEAisee_Comments = remarks;
            ShowProgress();
            $.ajax({
                type: "post",
                url: "/ANUPEAisal/SubmitKPIs",
                data: JSON.stringify({ kpi: PerformanceIndicator }),
                contentType: "application/json; charset = utf-8",
                success: function (data) {
                    if (data.success == true) {
                        Swal.fire('Success', data.message, 'success');
                        LoadPerformanceIndicator(DocNo);
                        $("#myModal").modal("hide");
                        HideProgress();
                    }
                    else {
                        HideProgress();
                        Swal.fire('error', data.message, 'error');
                    }
                },
                error: function () {
                    HideProgress();
                    Swal.fire('error', data.message, 'error');
                }
            });
        }
    }
    var EditKPIRecord = function (DocNo, LnNo) {
        $("#labelF").text("Update KPI Form");
        if (DocNo == "") {
            Swal.fire('error', 'ANUPEAisal Document No cannot be empty', 'error');
