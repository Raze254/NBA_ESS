    var SendForApproval = function () {
        $.ajaxSetup({ cache: false });
        Swal.fire({
            title: 'Confirmation?',
            text: "Are you sure you want to send this document for approval? Make sure that your supervisor has evaluated. If not. Send to supervisor first",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, Send!'
        }).then((result) => {
            if (result.value) {
                var DocNo = $("#DocNo").html();
                var StatementT = $("#ddlStatement").children("option:selected").val();
                var Reason = $("#txtReason").val();
                if (StatementT == "") {
                    Swal.fire('Warning', 'Choose whether you agree or disagree with the report', 'warning');
                    return;
                }
                else if (StatementT == "2" && Reason == "") {
                    Swal.fire('Warning', 'Give reason for Not agreeing with the report', 'warning');
                    return;
                }
                else {
                    ShowProgress();
                    var period;
                     if (`@Model.AllowMidYearReview` == true) {
                        period = "1";
                    }
                    if (`@Model.AllowEndYearReview` == true) {
                        period = "2";
                    }
                    $.ajax({
                        async: true,
                        type: "POST",
                        datatype: "json",
                        data: JSON.stringify({ DocNo: DocNo, Redirect: "Y", Agree: StatementT, Reason: Reason, period: period }),
                        contentType: "application/json; charset = utf-8",
                        processData: false,
                        url: `@Url.Action("SendANUPEAisalAppForApproval", "ANUPEAisal")`,
                        success: function (data) {
                            if (data.success == true) {
                                HideProgress();
                                window.location = `@Url.Action("MyANUPEAisalList", "ANUPEAisal")`;
                            }
                            else {
                                HideProgress();
                                Swal.fire('Error', data.message, 'error');
                            }
                        },
                        error: function (err) {
                            HideProgress();
                            Swal.fire('Warning', err, 'warning');
                        }
                    });
                }
            }
            else {
                Swal.fire('Cancelled', 'Document not send for approval', 'error');
            }
        });
