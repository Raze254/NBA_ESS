@model Latest_Staff_Portal.ViewModel.LocationList
<style>
    .ui-front {
        z-index: 2000 !important;
    }
</style>

<div class="bg-soft-dark" style="color:black">
    <div id="DivService">
        <div class="row">
            <div class="col-md-12">
                Items
                @Html.DropDownListFor(model => model.Code, Model.ListOfLocations, "----", new { @class = "form-control", id = "ddlItems" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                Quantity
                <input type="text" class="form-control" id="txtQuantity" onkeypress="return functionx(event)"/>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            Description(50 Characters)
            <textarea id="txtDescription" class="form-control" maxlength="50"></textarea>
        </div>
    </div>
    <hr/>
    <div align="center">
        <input type="button" class="btn btn-primary waves-effect waves-light" value="Add Line" onclick="AddMemoLineItem();"/>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#ddlItems").select2({
            width: '100%'
        });
    });
    function functionDecimal(evt, val) {
        try {
            var charCode = (evt.which) ? evt.which : event.keyCode;

            if (charCode == 46) {
                if (!(val.indexOf(".") > -1)) {
                    return true;
                }
                else {
                    Swal.fire('Warning', 'Kindly ensure to specify decimals only', 'warning');
                }
            }
            if (charCode > 31 && (charCode < 48 || charCode > 57)) {
                Swal.fire('Warning', 'Kindly ensure to specify decimals only', 'warning');
                return false;
            }
            return true;
        } catch (w) {
            Swal.fire(w);
        }
    }
    function functionx(evt) {
        if (evt.charCode > 31 && (evt.charCode < 48 || evt.charCode > 57)) {
            Swal.fire("Error", "Please enter only numeric characters in the text box", "error");
            return false;
        }
    }
</script>