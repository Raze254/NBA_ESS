            </div>
        </div>
    </div>
</div>

<script src="~/assets/js/ShowProgression.js"></script>
<script type="text/javascript">
	$(document).ready(function () {
		LoadImprestReqList();
	});
	var LoadImprestReqList = function () {
		ShowProgress();
		$.ajax({
			async: true,
			type: "GET",
			dataType: 'HTML',
			contentType: false,
			processData: false,
			url: "/Imprest/ImprestWarrantList",
			success: function (data) {
				$("#divList").html(data);
				HideProgress();
			},
			error: function () {
				HideProgress();
				Swal.fire("There is some problem to process your request. Please try after some time");
			}
		});
	}
	var ViewDoc = function (DocNo) {
		ShowProgress();
        var userType = "@ViewBag.UserType";
        if (userType == "Accounts") {
            HideProgress();
                var form = $('<form>', {
                    action: '/Imprest/ImprestWarrantDocument',
                    method: 'POST'
                }).append($('<input>', {
                    type: 'hidden',
                    name: 'DocNo',
                    value: DocNo
                }));
                form.appendTo('body').submit();
        }
        else {
            HideProgress();
            showModal(DocNo)
        }
	}

    var showModal = function (DocNo) {
        $("#labelF").text("Imprest Warrant Details");
        ShowProgress();
        $.ajax({
            async: true,
            type: "POST",
            datatype: "json",
            data: JSON.stringify({ DocNo: DocNo }),
            contentType: "application/json; charset = utf-8",
            processData: false,
            url: '/Imprest/ImprestWarrantUserDocument',
            success: function (data) {
                $("#modalBodyUnits").html(data);
                HideProgress();
                $("#myModalUnits").modal("show");
            },
            error: function (err) {
                HideProgress();
                Swal.fire('Warning', err, 'warning');
            }
        });
    }
</script>