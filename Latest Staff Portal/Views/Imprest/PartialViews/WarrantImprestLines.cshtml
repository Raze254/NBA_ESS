@using System.Globalization
@model Latest_Staff_Portal.ViewModel.WarrantImprestLinesList

<div class="table-responsive">
    <table id="datatable-buttons" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
        <thead style="background-color:black;color:white">
        <tr>
            <th>No</th>
            <th>Line No</th>
            <th>Account Type</th>
            <th>Account No</th>
            <th>Account Name</th>
            <th>Purpose</th>
            <th>Daily Rate</th>
            <th>No. of Days</th>
            <th>Amount</th>
        </tr>
        </thead>
        <tbody>
        @if (Model.ListOfWarrantImprestLines != null && Model.ListOfWarrantImprestLines.Any())
        {
            foreach (var item in Model.ListOfWarrantImprestLines)
            {
                <tr>
                    <td>@item.No</td>
                    <td>@item.LineNo</td>
                    <td>@item.AccountType</td>
                    <td>@item.AccountNo</td>
                    <td>@item.AccountName</td>
                    <td>@item.Purpose</td>
                    <td>@item.DailyRate.ToString("C", new CultureInfo("sw-KE"))</td>
                    <td>@item.NoOfDays</td>
                    <td>@item.Amount.ToString("C", new CultureInfo("sw-KE"))</td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>
<script>
    $("#datatable-buttons").DataTable({
        lengthChange: true,
        lengthMenu: [5, 10, 25, 50, 100],
        "bDestroy": true
    });
</script>