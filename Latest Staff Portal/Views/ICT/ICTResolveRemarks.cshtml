@model Latest_Staff_Portal.ViewModel.ICTCancel
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            @Html.Label("Issue Resolved", new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                <select class="form-control" id="ddlResolved">
                    <option value="">----</option>
                    <option value="1">Yes</option>
                    <option value="0">Escalated</option>
                </select>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group">
            @Html.Label("Enter Resolution Remarks", new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                @Html.TextAreaFor(model => model.Remarks, new { @class = "form-control", id = "txtConfirmR" })
            </div>
        </div>
    </div>
</div>
<hr/>

<div align="center" id="UserConfirm">
    <input type="button" class="btn btn-primary waves-effect waves-light" value="Resolve" onclick="SubmitConfirmationrequest('@Model.DocNo');"/>
</div>
<div align="center" id="ICTConfirm">
    <input type="button" class="btn btn-primary waves-effect waves-light" value="Resolve" onclick="ICTResolveRequest('@Model.DocNo');"/>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        var status = '@Model.Status';
        if (status == "Resolved Waiting User Confirmation") {
           
            $("#UserConfirm").show();
            $("#ICTConfirm").hide();
        }
        else {
            $("#UserConfirm").hide();
            $("#ICTConfirm").show();
        }
    });
</script>