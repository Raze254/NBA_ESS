@model IEnumerable<Latest_Staff_Portal.ViewModel.FixedAssets>

@{
    ViewBag.Title = "FixedAssetsListPartialView";
}

<div class="table-responsive">
    <table id="datatable-buttons" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
        <thead style="background-color:black;color:white">
            <tr>
                <th>Action</th>
                <th>No</th>
                <th>Description</th>
                <th>FA Class Code</th>
                <th>FA Subclass Code</th>
              @*  <th>FA Location Code</th>*@
                @*<th>Search Description</th>
                <th>Responsible Employee</th>*@
                <th>FA Posting Group</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="button" onclick="ViewDoc('@item.No');" class="btn btn-primary btn-sm action-buttons3" value="Select" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.No)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FA_Class_Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FA_Subclass_Code)
                    </td>
                    @* 
                       <td>
                     @Html.DisplayFor(modelItem => item.FA_Location_Code)
                 </td>

                <td>
                     @Html.DisplayFor(modelItem => item.Search_Description)
                 </td>
                 <td>
                     @Html.DisplayFor(modelItem => item.Responsible_Employee)
                 </td>
                    *@
                    <td>
                        @Html.DisplayFor(modelItem => item.FA_Posting_Group)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

<script type="text/javascript">
    $("#datatable-buttons").DataTable({
        lengthChange: true,
        lengthMenu: [5, 10, 25, 50, 100] // Same options for the second table
    });
</script>
