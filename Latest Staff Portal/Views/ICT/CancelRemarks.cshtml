@model Latest_Staff_Portal.ViewModel.ICTCancel
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            @Html.Label("Enter Cancel Remarks", new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                @Html.TextAreaFor(model => model.Remarks, new { @class = "form-control", id = "txtCancelR" })
            </div>
        </div>
    </div>
</div>
<hr/>
<div align="center">
    <input type="button" class="btn btn-primary waves-effect waves-light" value="Cancel Request" onclick="SubmitCancelrequestRequisition('@Model.DocNo');"/>
</div>