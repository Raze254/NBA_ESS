@model Latest_Staff_Portal.ViewModel.IndividualScoreCard

@{
    ViewBag.Title = "SupervisorsApprisals";
    Layout = "~/Views/Shared/Sitemaster.cshtml";
}

<style>
    thead {
        background-color: black;
        color: white;
    }

    .selectedTableRow {
        background-color: #74788d;
        color: white;
    }

    .BtnPadding {
        padding: 1px;
        font-size: 12px;
    }
</style>
<div class="page-header">
    <div class="row">
        <div class="col-sm-12">
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="#" onclick="HumanResourceLink();">Dashboard</a></li>
                <li class="breadcrumb-item active">Supervisor Review List</li>
            </ul>
        </div>
    </div>
</div>
<div class="card ">
    <div class="card-body">
        <div class="card-header d-flex justify-content-between align-items-center mb-2 p-1">
            <h5 class="m-0">Supervisor Review List</h5>
            @{
                var iconClass = "";
                var badgeClass = "";

                switch (ViewBag.PASDocStage)
                {
                    case "Initial stage":
                        iconClass = "fas fa-hourglass-start";
                        badgeClass = "badge-primary";
                        break;
                    case "Negotiation":
                        iconClass = "fas fa-handshake";
                        badgeClass = "badge-warning";
                        break;
                    case "Evaluation":
                        iconClass = "fas fa-check-circle";
                        badgeClass = "badge-success";
                        break;
                    default:
                        iconClass = "fas fa-question-circle";
                        badgeClass = "badge-dark";
                        break;
                }
            }

            <span class="badge @badgeClass p-2">
                <i class="@iconClass"></i> @ViewBag.PASDocStage
            </span>


        </div>

        <div id="divAppraisalList"></div>
    </div>
</div>
@*//////////////////////Modal////////////////////////////*@
<div class="modal fade" id="myModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content bg-white">
            <div class="modal-header">
                <h4 class="modal-title"><label id="labelF"></label></h4>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalBody">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger waves-effect " data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<script src="~/assets/js/ShowProgression.js"></script>
<script type="text/javascript">
$(document).ready(function () {
        LoadAppraisalReqList();
    });
    var LoadAppraisalReqList = function () {
        ShowProgress();
        $.ajax({
            async: true,
            type: "GET",
            dataType: 'HTML',
            contentType: false,
            processData: false,
            url: "/Pas/SupervisorAppraisalList",
            success: function (data) {
                HideProgress();
                $("#divAppraisalList").html(data);
            },
            error: function () {
                HideProgress();
                Swal.fire("There is some problem to process your request. Please try after some time");
            }
        });
    }

    



</script>
