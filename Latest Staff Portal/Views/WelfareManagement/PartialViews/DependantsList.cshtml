@model List<Latest_Staff_Portal.ViewModel.DependentList>

<div class="table-responsive">
    <table class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
        <thead style="background-color:black;color:white">
        <tr>
            <th>Employee Code</th>
            <th>Line No</th>
            <th>Document No</th>
            <th>Relationship</th>
            <th>Surname</th>
            <th>Other Names</th>
            <th>Date of Birth</th>
            <th>Type</th>
            <th>ID No/Passport No</th>
            <th>Comment</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Employee_Code</td>
                    <td>@item.Line_No</td>
                    <td>@item.Document_No</td>
                    <td>@item.Relationship</td>
                    <td>@item.SurName</td>
                    <td>@item.Other_Names</td>
                    <td>@item.Date_Of_Birth</td>
                    <td>@item.Type</td>
                    <td>@item.ID_No_Passport_No</td>
                    <td>@item.Comment</td>
                    <td>
                        <!-- Edit button -->
                        <input type="button" onclick="editWorkTicketLine('@item.Document_No');" class="btn btn-sm btn-danger" value="Edit"/>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="11" style="color:red">
                    No Records Found
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

<div align="right" class="HideLineButton">
    <input type="button" value="Add Dependent" class="btn btn-danger BtnPadding" onclick="AddDependent();"/>
</div>
