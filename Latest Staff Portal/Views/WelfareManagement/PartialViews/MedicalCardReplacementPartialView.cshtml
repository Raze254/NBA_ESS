@model List<Latest_Staff_Portal.ViewModel.MedicalCardReplacement>

<table id="datatable-buttons" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
    <thead style="background-color:black;color:white">
    <tr>
        <th>Action</th>
        <th>Document No</th>
        <th>Employee No</th>
        <th>Employee Name</th>
        <th>Description</th>
        <th>Document Date</th>
        <th>Document Status</th>
        <th>Status</th>
        <th>Requestor ID</th>

    </tr>
    </thead>
    <tbody>
    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    <input type="button" onclick="viewCard('@item.DocumentNo');" style="background: #162f25; color:whitesmoke; border-radius:10px" value="Select"/>
                </td>
                <td>@item.DocumentNo</td>
                <td>@item.EmployeeNo</td>
                <td>@item.EmployeeName</td>
                <td>@item.Description</td>
                <td>@item.DocumentDate</td>
                <td>@item.DocumentStatus</td>
                <td>@item.Status</td>
                <td>@item.RequestorID</td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="17" style="color:red">
                No Records Found
            </td>
        </tr>
    }
    </tbody>
</table>