﻿@model Latest_Staff_Portal.ViewModel.NextOfKin

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            @Html.Label("Surname", htmlAttributes: new { @class = "control-label col-md-12" })
            @Html.TextBoxFor(m => m.SurName, new { @class = "form-control", id = "surname" })
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            @Html.Label("Other Names", htmlAttributes: new { @class = "control-label col-md-12" })
            @Html.TextBoxFor(m => m.Other_Names, new { @class = "form-control", id = "otherNames" })
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            @Html.Label("Relationship", htmlAttributes: new { @class = "control-label col-md-12" })
            @Html.DropDownListFor(m => m.Relationship, Model.ListOfRelationship, "--Select Relationship Item--", new { @id = "relationship", @class = "form-control select2 custom-select" })
        </div>
    </div>


    <div class="col-md-6">
        <div class="form-group">
            @Html.Label("Date of Birth", htmlAttributes: new { @class = "control-label col-md-12" })
            @Html.TextBoxFor(m => m.Date_Of_Birth, new { @class = "form-control datepicker", id = "dob", @placeholder = "dd/mm/yyyy" })
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            @Html.Label("Phone Number", htmlAttributes: new { @class = "control-label col-md-12" })
            @Html.TextBoxFor(m => m.Home_Tel_No, new { @class = "form-control", id = "phoneNo" })
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            @Html.Label("Email", htmlAttributes: new { @class = "control-label col-md-12" })
            @Html.TextBoxFor(m => m.E_mail, new { @class = "form-control", id = "email", type = "email" })
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            @Html.Label("ID/Passport No", htmlAttributes: new { @class = "control-label col-md-12" })
            @Html.TextBoxFor(m => m.ID_No_Passport_No, new { @class = "form-control", id = "idNo" })
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            @Html.Label("Gender", htmlAttributes: new { @class = "control-label col-md-12" })
            @Html.DropDownListFor(m => m.Gender, new List<SelectListItem>
            {
                new SelectListItem { Text = "Male", Value = "1" },
                new SelectListItem { Text = "Female", Value = "2" }
            }, "-- Select Gender --", new { @class = "form-control", id = "gender" })
        </div>
    </div>

</div>

<div align="center">
    <input type="button" class="btn btn-primary action-buttons" value="Add Next Of Kin" onclick="SubmitNextOfKin();" />
</div>
<script>
    $(function () {
        $("#dob").datepicker({
            dateFormat: "dd/mm/yy",
            changeMonth: true,
            changeYear: true,
            yearRange: "1900:+0", // allows selection from 1900 to current year
        });

        // Set a default date (e.g., 1st Jan 2000)
        $("#dob").datepicker("setDate", "01/01/2000");
    });
</script>